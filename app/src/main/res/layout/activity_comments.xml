<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/comments_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/whitesmoke">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/comments_edi"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/smallhdp"
                    android:layout_margin="@dimen/smallmdp"
                    android:background="@drawable/initialsignin_top_search_edittext"
                    android:gravity="center_vertical"
                    android:hint="请输入您的评价"
                    android:maxLength="100"
                    android:paddingLeft="@dimen/smallmdp"
                    android:textSize="@dimen/mediumsp"/>

                <TextView
                    android:id="@+id/comments_commit_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发送"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/mediumxsp"
                    android:layout_gravity="center"
                    android:padding="@dimen/activity_horizontal_margin"/>
            </LinearLayout>


</LinearLayout>