<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/jzzt_list_lin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hugehxxxxxdp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/smallmdp"
        android:paddingBottom="@dimen/smallmdp"
        >

        <ImageView
            android:id="@+id/jzzzt_item_img"
            android:layout_width="@dimen/hugehxxxxdp"
            android:layout_height="@dimen/hugehxxxxdp"
            android:scaleType="centerInside"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin">
            <TextView
                android:id="@+id/jzzt_title_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="标题"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/mediumxsp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/jzzt_addr_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="地址"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/mediumsp"
                android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/jzzt_sponsor_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="测试活动主办方"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/mediumsp"
                    android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/jzzt_hdrq_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017/02/17~2017/02/28"
                android:textSize="@dimen/smallsp"
                android:textColor="@color/gary_dark"
                android:gravity="bottom"
                android:layout_gravity="center_vertical"
                android:paddingRight="@dimen/activity_horizontal_margin"/>
        </LinearLayout>

        </LinearLayout>

</LinearLayout>