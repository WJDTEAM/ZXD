<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingRight="8dp"
                android:id="@+id/RelativeLayout_item"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
    >

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/hugehxxxxxdp"
        android:layout_height="@dimen/hugehxxdp"
        android:layout_marginLeft="@dimen/smallmdp"
        android:layout_marginRight="@dimen/smallmdp"
        android:src="@drawable/demo"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/gsTitle_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallmdp"
        android:layout_toRightOf="@id/img"
        android:textColor="@color/black"
        android:text="约看工地客户们该注意哪些细节"
        />

    <TextView
        android:id="@+id/gsAddress_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gsTitle_txt"
        android:layout_toRightOf="@id/img"
        android:textSize="@dimen/smallsp"
        android:lines="3"
        android:ellipsize="end"
        android:text="约看工地可不是一件简单的事情。主意好细节，能免去以后的好多麻烦"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/img"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/smallmdp"
        android:layout_marginRight="@dimen/smallmdp"
        android:background="@drawable/recylist_item_line_shap"
        />


</RelativeLayout>
