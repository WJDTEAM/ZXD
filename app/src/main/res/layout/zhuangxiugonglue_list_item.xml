<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
    >
    <ImageView
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/home_zxgs"
        />
    <TextView
        android:id="@+id/above_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="约看工地客户们该注意哪些细节"
        android:layout_toRightOf="@id/img"
        android:layout_marginBottom="8dp"
        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="约看工地可不是一件简单的事情。主意好细节，能免去以后的好多麻烦"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/above_txt"
        android:lines="3"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/recylist_item_line_shap"
        android:layout_alignParentBottom="true"
        />



</RelativeLayout>
