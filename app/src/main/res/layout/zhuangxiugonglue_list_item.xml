<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:id="@+id/RelativeLayout_item"
    >

    <ImageView
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/home_zxgs"
        />

    <TextView
        android:id="@+id/above_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/img"
        android:textColor="@drawable/back"
        android:text="约看工地客户们该注意哪些细节"
        />

    <TextView
        android:id="@+id/bottom_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/above_txt"
        android:layout_toRightOf="@id/img"
        android:lines="3"
        android:text="约看工地可不是一件简单的事情。主意好细节，能免去以后的好多麻烦"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/recylist_item_line_shap"
        />


</RelativeLayout>
