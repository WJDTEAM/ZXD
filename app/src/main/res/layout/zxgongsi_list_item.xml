<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:clickable="true"
              android:orientation="vertical"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/RelativeLayout_item"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/demo"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/gsTitle_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="恋家装饰"
                android:lines="2"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/gsAddress_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smallsp"
                android:lines="2"
                android:ellipsize="end"
                android:text="洛阳市金水区农业路向西1000米"
                />

            <TextView
                android:id="@+id/goodSay_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好评率：100%"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/smallsp"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/jdgg_img"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jdgg_img"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            />

    </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/recylist_item_line_shap"
        />


</LinearLayout>
