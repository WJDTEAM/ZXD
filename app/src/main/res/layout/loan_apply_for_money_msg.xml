<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <include layout="@layout/loan_apply_for_header"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:text="名下房产："
                    style="@style/apply_for_text_style"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:layout_gravity="top"
                    android:paddingTop="@dimen/smallmdp"
                    />

                <RadioGroup
                    android:id="@+id/home_radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/loan_home_rad_no"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="无房"
                        android:checked="true"
                        android:textColor="@color/black"
                        android:button="@drawable/sex_selector"/>
                    <RadioButton
                        android:id="@+id/loan_home_rad_have"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="有房，已抵押"
                        android:textColor="@color/black"
                        android:button="@drawable/sex_selector"
                        />
                    </LinearLayout>
                    <RadioButton
                        android:id="@+id/loan_home_rad_have_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="有房，未抵押"
                        android:textColor="@color/black"
                        android:button="@drawable/sex_selector"
                        />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal"
                >
                <TextView

                    android:text="资产估值："
                    style="@style/apply_for_text_style"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    />
                <EditText
                    android:id="@+id/loan_wage_edi"
                    style="@style/apply_for_edi_style"
                    android:hint="单位（元）"
                    android:textColorHint="@color/gary"
                    android:digits="1234567890."
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:text="房产类型："
                    style="@style/apply_for_text_style"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:layout_gravity="top"
                    android:paddingTop="@dimen/smallmdp"
                    />

                <RadioGroup
                    android:id="@+id/_radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/loan_home_type_rad_1"
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:layout_height="wrap_content"
                            android:text="商品住宅"
                            android:lines="1"
                            android:checked="true"
                            android:textColor="@color/black"
                            android:button="@drawable/sex_selector"/>
                        <RadioButton
                            android:id="@+id/loan_home_type_rad_2"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:text="商铺"
                            android:textColor="@color/black"
                            android:button="@drawable/sex_selector"
                            />
                        <RadioButton
                            android:id="@+id/loan_home_type_rad_3"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="厂房"
                            android:textColor="@color/black"
                            android:button="@drawable/sex_selector"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/loan_home_type_rad_4"
                            android:layout_width="0dp"
                            android:layout_weight="0.4"
                            android:layout_height="wrap_content"
                            android:text="办公楼"
                            android:lines="1"
                            android:checked="true"
                            android:textColor="@color/black"
                            android:button="@drawable/sex_selector"/>
                        <RadioButton
                            android:id="@+id/loan_home_type_rad_5"
                            android:layout_width="0dp"
                            android:layout_weight="0.45"
                            android:layout_height="wrap_content"
                            android:text="危改房"
                            android:textColor="@color/black"
                            android:button="@drawable/sex_selector"
                            />

                        <RadioButton
                            android:id="@+id/loan_home_type_rad_6"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="经济适用房"
                            android:textColor="@color/black"
                            android:button="@drawable/sex_selector"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/loan_home_type_rad_7"
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:layout_height="wrap_content"
                            android:text="其他"
                            android:lines="1"
                            android:checked="true"
                            android:textColor="@color/black"
                            android:button="@drawable/sex_selector"/>

                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal"
                >

                <TextView
                    android:text="房产抵押："
                    style="@style/apply_for_text_style"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    />

                <RadioGroup
                    android:id="@+id/use_home_radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <RadioButton
                        android:id="@+id/loan_use_home_rad_true"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="能接受"
                        android:checked="true"
                        android:textColor="@color/black"
                        android:button="@drawable/sex_selector"/>
                    <RadioButton
                        android:id="@+id/loan_use_home_rad_false"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="不能接受"
                        android:textColor="@color/black"
                        android:button="@drawable/sex_selector"
                        />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal"
                >
                <TextView

                    android:text="车辆估值："
                    style="@style/apply_for_text_style"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    />
                <EditText
                    android:id="@+id/loan_city_edi"
                    style="@style/apply_for_edi_style"
                    android:hint="单位（元）"
                    android:textColorHint="@color/gary"
                    android:digits="1234567890."
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:text="名下车产："
                    style="@style/apply_for_text_style"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:layout_gravity="top"
                    android:paddingTop="@dimen/smallmdp"
                    />

                <RadioGroup
                    android:id="@+id/car_radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/loan_car_rad_1"
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:layout_height="wrap_content"
                            android:text="有车无抵押"
                            android:lines="1"
                            android:checked="true"
                            android:textColor="@color/black"
                            android:button="@drawable/sex_selector"/>
                        <RadioButton
                            android:id="@+id/loan_car_rad_2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="有车已抵押"
                            android:textColor="@color/black"
                            android:button="@drawable/sex_selector"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/loan_car_rad_3"
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="wrap_content"
                            android:text="无车，准备购买"
                            android:lines="1"
                            android:checked="true"
                            android:textColor="@color/black"
                            android:button="@drawable/sex_selector"/>
                        <RadioButton
                            android:id="@+id/loan_car_rad_4"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="无车"
                            android:textColor="@color/black"
                            android:button="@drawable/sex_selector"
                            />

                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal"
                >
                <TextView
                    android:text="车辆抵押："
                    style="@style/apply_for_text_style"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    />

                <RadioGroup
                    android:id="@+id/use_car_radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <RadioButton
                        android:id="@+id/loan_use_car_rad_true"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="能接受"
                        android:checked="true"
                        android:textColor="@color/black"
                        android:button="@drawable/sex_selector"/>
                    <RadioButton
                        android:id="@+id/loan_use_car_rad_false"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="不能接受"
                        android:textColor="@color/black"
                        android:button="@drawable/sex_selector"
                        />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/loan_apply_for_user_msg_btn"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_margin="@dimen/smallmdp"
        android:layout_gravity="bottom"
        android:textSize="@dimen/bigsp"
        android:textColor="@color/apply_for_color_selector"
        android:text="提交"
        android:background="@drawable/apply_for_selector"/>
</LinearLayout>