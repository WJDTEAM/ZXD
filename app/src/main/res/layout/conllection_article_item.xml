<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="0.5dp">


    <LinearLayout
        android:id="@+id/collection_item_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hugehxxxxxdp"
        android:orientation="horizontal"
        android:background="?android:selectableItemBackground"
        android:clickable="true">
        <ImageView
            android:id="@+id/collection_item_img"
            android:layout_width="@dimen/hugehxxxxxdp"
            android:layout_height="@dimen/hugehxxdp"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/mediummdp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/mediummdp"
            android:paddingBottom="@dimen/mediummdp"
            android:paddingLeft="@dimen/mediummdp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/collection_item_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumsp"
                android:text="标题"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/collection_item_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="@dimen/smallsp"
                android:text="内容"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/collection_item_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/tinysp"
                android:text="2017-01-09"
                android:gravity="center_vertical"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>