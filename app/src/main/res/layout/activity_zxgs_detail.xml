<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_product_exhibition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!--toolBar-->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <!--content-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/toolbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/recylist_item_line_shap"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/whitesmoke"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32dp"
                    android:clickable="true"
                    android:src="@drawable/home_zxgs"

                    />

                <TextView
                    android:id="@+id/gsTitle_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_toRightOf="@+id/image"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gsTitle_txt"
                    android:layout_toRightOf="@+id/image"
                    android:gravity="center_vertical"

                    >

                    <TextView
                        android:id="@+id/below_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:padding="4dp"
                        android:text="河南苹果装饰2000平米展厅"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/address_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:drawableLeft="@drawable/address"
                        android:drawablePadding="5dp"
                        android:text="金水区农业路国贸360广场3栋1602室"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/below_txt"
                        android:src="@drawable/like_light"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/below_txt"
                        android:text="98%"
                        android:textColor="@color/colorPrimary"

                        />
                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/whitesmoke"
                />

            <include layout="@layout/case_show"/>
            <include layout="@layout/owner_evaluate"/>

        </LinearLayout>

    </ScrollView>
    <!--贷款预约-->
    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mediumhdp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_purple"
       >

        <LinearLayout
            android:id="@+id/template_loan_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@android:color/holo_orange_dark"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/loan"
                android:layout_gravity="center"
                android:scaleType="fitEnd"
                android:paddingRight="@dimen/activity_horizontal_margin"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="@dimen/mediumsp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:text="贷款"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/template_subscribe_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/red"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/subscribe"
                android:layout_gravity="center"
                android:scaleType="fitEnd"
                android:paddingRight="@dimen/activity_horizontal_margin"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="@dimen/mediumsp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:text="预约"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
