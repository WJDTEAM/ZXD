<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.bf.zxd.zhuangxudai.customview.DropDownMenu
        android:id="@+id/dropDownMenu_bank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ddmenuTextSize="@dimen/mediumsp"
        app:ddtextUnselectedColor="@color/black"
        app:ddtextSelectedColor="@color/colorPrimary"
        app:dddividerColor="@color/gary"
        app:ddunderlineColor="@color/gary"
        app:ddmenuSelectedIcon="@drawable/drop_down_selected_icon"
        app:ddmaskColor="@color/mask_color"
        app:ddmenuBackgroundColor="@color/white"
        app:ddmenuUnselectedIcon="@drawable/drop_down_unselected_icon"
        android:background="@color/whitesmoke"
        />
    <ImageView
        android:id="@+id/YBJ_loding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/YBJ_loding_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载中..."
        android:layout_below="@+id/YBJ_loding"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/bigsp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>